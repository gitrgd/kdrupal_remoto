{%
  set classes = [
    'node',
    'node-detail',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'clearfix',
  ]
%}

<!-- Start Display article for teaser page -->
{% if teaser == true %} 
  <div class="post-block">
    <div class="post-image">
      {{ content.field_imagen_post }}
      <div class="post-categories">{{ content.field_etiquetas_blog }}</div>
    </div>
    <div class="post-content text-left">
      <div class="post-title"> <a href="{{ url }}" rel="bookmark">{{ label }}</a> </div>
       <div class="post-body">{{ content.body }}</div>
    </div>
  </div>
<!-- End Display article for teaser page -->
{% else %}
<!-- Start Display article for detail page -->

<article{{ attributes.addClass(classes) }}>
  <div class="post-block">
      
    <div class="post-thumbnail post-{{ post_format }}">
      {% if post_format == 'video' or post_format == 'audio' and gva_iframe %}
        {{ gva_iframe|raw }}
      {% elseif post_format == 'gallery' and content.field_post_gallery %}
        {{ content.field_post_gallery }}
      {% else %}
        {{ content.field_imagen_post }}
      {% endif %}  
    </div>

    <div class="post-content">
      {{ title_prefix }}
         <h1{{ title_attributes.addClass('post-title') }}>{{ label }}</h1>
      {{ title_suffix }}         
      <div class="post-meta">
        <span class="post-categories">{{ content.field_etiquetas_blog }}</span> /
        <span class="post-created"> {{date }} </span> /
        <span class="post-comment"> 
          <a href="{{url}}/#comments">{{ comment_count }} Comentarios</a>
        </span>
      </div>
      
      {% if display_submitted %}
        <div class="node__meta hidden">
          {{ author_picture }}
          <span{{ author_attributes }}>
            {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
          </span>
          {{ metadata }}
        </div>
      {% endif %}

      <div{{ content_attributes.addClass('node__content', 'clearfix') }}>
        {{ content|without('field_imagen_post','field_etiquetas_blog', 'field_post_format', 'field_post_type', 'field_post_embed', 'field_post_gallery', 'field_comentarios') }}
      </div>
      <div id="node-single-comment">
        {{ content.field_comentarios }}
      </div>

    </div>

  </div>

</article>

<!-- End Display article for detail page -->
{% endif %}